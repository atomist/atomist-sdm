{
  "name": "@atomist/atomist-sdm",
  "version": "2.0.0",
  "description": "Atomist SDM to deliver our own projects",
  "author": {
    "name": "Atomist",
    "email": "support@atomist.com",
    "url": "https://atomist.com/"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/atomist/atomist-sdm.git"
  },
  "keywords": [
    "atomist",
    "automation",
    "sdm"
  ],
  "homepage": "https://github.com/atomist/atomist-sdm#readme",
  "bugs": {
    "url": "https://github.com/atomist/atomist-sdm/issues"
  },
  "dependencies": {
    "@atomist/sdm": "^2.1.2",
    "@atomist/slack-messages": "^1.2.1",
    "@google-cloud/storage": "^5.8.0",
    "@types/app-root-path": "^1.2.4",
    "@types/fs-extra": "^7.0.0",
    "@types/json-stringify-safe": "^5.0.0",
    "@types/lodash": "^4.14.168",
    "@types/node": "^12.20.4",
    "@types/semver": "^6.2.2",
    "app-root-path": "^2.1.0",
    "fs-extra": "^8.0.1",
    "json-stringify-safe": "^5.0.1",
    "license-checker": "^25.0.1",
    "lodash": "^4.17.21",
    "minimatch": "^3.0.4",
    "semver": "^6.1.0",
    "spdx-license-list": "^6.4.0"
  },
  "devDependencies": {
    "@types/mocha": "^8.2.1",
    "@types/power-assert": "^1.5.3",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.3.1",
    "espower-typescript": "^9.0.2",
    "fast-glob": "^3.2.5",
    "mocha": "^8.3.0",
    "npm-run-all": "^4.1.5",
    "power-assert": "^1.4.4",
    "prettier": "^2.2.1",
    "rimraf": "^2.6.2",
    "supervisor": "^0.12.0",
    "ts-node": "^8.10.2",
    "typedoc": "^0.17.8",
    "typescript": "^3.9.9"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "autotest": "supervisor --watch index.ts,lib,test --extensions ts --no-restart-on exit --quiet --exec npm -- test",
    "build": "run-s clean compile test lint doc",
    "clean": "run-p clean:compile clean:test clean:doc clean:run",
    "clean:compile": "rimraf git-info.json \"index.{d.ts,js}{,.map}\" \"{lib,test}/**/*.{d.ts,js}{,.map}\" lib/typings/types.ts",
    "clean:dist": "run-s clean clean:npm",
    "clean:doc": "rimraf doc",
    "clean:npm": "rimraf node_modules",
    "clean:run": "rimraf *-v8.log profile.txt log",
    "clean:test": "rimraf .nyc_output coverage",
    "compile": "run-s git:info gql:gen compile:ts",
    "compile:ts": "tsc --project .",
    "doc": "typedoc --mode modules --excludeExternals --ignoreCompilerErrors --exclude \"**/*.d.ts\" --out doc index.ts lib",
    "fmt:gql": "prettier --write \"lib/graphql/**/*.graphql\"",
    "git:info": "atm-git-info",
    "gql:gen": "atm-gql-gen",
    "lint": "run-p lint:gql lint:ts",
    "lint:fix": "run-p fmt:gql lint:ts:fix",
    "lint:gql": "prettier --list-different \"lib/graphql/**/*.graphql\"",
    "lint:ts": "eslint --ext .ts .",
    "lint:ts:fix": "npm run lint:ts -- --fix",
    "start": "atm-start",
    "test": "mocha --require espower-typescript/guess \"test/**/*.test.ts\"",
    "test:one": "mocha --require espower-typescript/guess \"test/**/${TEST:-*.test.ts}\""
  },
  "engines": {
    "node": ">=8.2.0",
    "npm": ">=5.0.0"
  }
}
